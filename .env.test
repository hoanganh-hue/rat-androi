# Test Environment Configuration
# Used by Jest tests to avoid interfering with development database

NODE_ENV=test

# Use in-memory SQLite for fast tests (or separate test PostgreSQL)
# For now, using a separate test database name
DB_TYPE=postgres
DB_NAME=dogerat_test
DB_USER=dogerat
DB_PASSWORD=changeme
DB_HOST=localhost
DB_PORT=5432

# This will be auto-constructed by jest.env-boot.js
# DATABASE_URL=postgresql://dogerat:changeme@localhost:5432/dogerat_test

# Test JWT Secret
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_EXPIRY=1h

# Test Admin User
ADMIN_USERNAME=testadmin
ADMIN_EMAIL=testadmin@test.local
ADMIN_PASSWORD=TestAdmin@123

# Logging
LOG_LEVEL=error
LOG_FILE=/tmp/test-server.log

# Rate Limiting (relaxed for tests)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/tmp/test-uploads

# Socket.IO
SOCKET_PING_INTERVAL=30000
SOCKET_PING_TIMEOUT=60000

# CORS
CORS_ORIGIN=http://localhost:4200
FRONTEND_URL=http://localhost:4200

# Server
PORT=5001
HOST=localhost
